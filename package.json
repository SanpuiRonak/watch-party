{
    "name": "watch-party",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "predev": "docker-compose -f docker-compose.dev.yml up -d",
        "dev": "tsx server.ts",
        "postdev": "docker-compose -f docker-compose.dev.yml down",
        "mongo:start": "docker-compose -f docker-compose.dev.yml up -d mongodb",
        "mongo:stop": "docker-compose -f docker-compose.dev.yml down",
        "prebuild": "npm run test:run",
        "build": "next build && npx tsc server.ts --outDir . --target es2020 --module commonjs --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
        "build:docker": "docker build -t watch-party .",
        "start": "next start",
        "docker:build": "docker build -t watch-party .",
        "docker:run": "docker-compose up -d",
        "docker:stop": "docker-compose down",
        "format": "eslint --fix .",
        "format:check": "eslint .",
        "type-check": "tsc --noEmit",
        "check-all": "npm run type-check && npm run format:check",
        "prepare": "husky",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui"
    },
    "dependencies": {
        "@radix-ui/react-avatar": "^1.0.4",
        "@radix-ui/react-dialog": "^1.0.5",
        "@radix-ui/react-slider": "^1.3.6",
        "@radix-ui/react-slot": "^1.0.2",
        "@radix-ui/react-switch": "^1.2.6",
        "@radix-ui/react-tabs": "^1.1.13",
        "@reduxjs/toolkit": "^1.9.7",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "dotenv": "^17.2.3",
        "jsonwebtoken": "^9.0.3",
        "lucide-react": "^0.562.0",
        "mongodb": "^7.0.0",
        "next": "^15.1.0",
        "rate-limiter-flexible": "^9.0.1",
        "react": "^18",
        "react-dom": "^18",
        "react-redux": "^8.1.3",
        "socket.io": "^4.7.4",
        "socket.io-client": "^4.7.4",
        "sonner": "^2.0.7",
        "tailwind-merge": "^2.0.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.5.1",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/coverage-v8": "^4.0.16",
        "autoprefixer": "^10.0.1",
        "eslint": "^8",
        "eslint-config-next": "14.0.0",
        "husky": "^9.1.7",
        "jsdom": "^23.0.1",
        "lint-staged": "^16.2.7",
        "msw": "^2.12.4",
        "postcss": "^8",
        "tailwindcss": "^3.3.0",
        "tailwindcss-animate": "^1.0.7",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5",
        "vitest": "^4.0.16"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix"
        ]
    }
}
