{
  "name": "watch-party",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "docker-compose -f docker-compose.dev.yml up -d",
    "dev": "tsx socket-server.ts",
    "postdev": "docker-compose -f docker-compose.dev.yml down",
    "mongo:start": "docker-compose -f docker-compose.dev.yml up -d mongodb",
    "mongo:stop": "docker-compose -f docker-compose.dev.yml down",
    "build": "next build && npx tsc socket-server.ts --outDir . --target es2020 --module commonjs --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "build:docker": "docker build -t watch-party .",
    "start": "next start",
    "docker:build": "docker build -t watch-party .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "lint": "next lint"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@reduxjs/toolkit": "^1.9.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.562.0",
    "mongodb": "^7.0.0",
    "next": "^15.1.0",
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^8.1.3",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}
